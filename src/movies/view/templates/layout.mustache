<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="{{context-root}}/css/jquery-ui.min.css" rel="stylesheet" type="text/css">
    <link href="{{context-root}}/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="{{context-root}}/css/main.css" rel="stylesheet" type="text/css">

    <script src="{{context-root}}/js/jquery.min.js" type="text/javascript"></script>
    <script src="{{context-root}}/js/jquery.ui.core.min.js" type="text/javascript"></script>
    <script src="{{context-root}}/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="{{context-root}}/js/common.js" type="text/javascript"></script>
  </head>
  <body>
    <input type="hidden" id="context-root" value="{{context-root}}" />
    <div class="container">
      <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
	<div class="container">
	  <a class="navbar-brand" href="{{context-root}}/">Name</a>
	  <div class="navbar-header">
	    <button type="button" class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse">
	      <span class="sr-only">Toggle navigation</span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	    </button>
	  </div>
	  <div class="navbar-collapse collapse">
	    <ul class="nav navbar-nav">
	      <li><a href="{{context-root}}/">Home</a></li>
	      {{#authenticated?}}
	      {{#nav-links}}
	      <li><a href="{{link}}">{{label}}</a></li>
	      {{/nav-links}}
	      {{/authenticated?}}
	      <li><a href="{{context-root}}/about">About</a></li>
	    </ul>
	    <ul class="nav navbar-nav navbar-right">
	      {{#authenticated?}}
	      <li class="dropdown">
		<a class="dropdown-toggle" data-toggle="dropdown" href="#">
		  <span class="glyphicon glyphicon-user"></span>
		  <span style="margin: 0 5px;">{{user}}</span>
		  <span class="caret"></span>
		</a>
		<ul class="dropdown-menu">
		  <li><a href="{{context-root}}/profile">Profile</a></li>
		  <li><a href="{{context-root}}/settings">Settings</a></li>
		  <li class="divider"></li>
		  <li><a href="{{context-root}}/logout">Logout</a></li>
		</ul>
	      </li>
	      {{/authenticated?}}
	    </ul>
	  </div>
	</div>
      </nav>
      <div class="container" id="content">
	{{{body}}}
      </div>
      <div class="footer">
	<div class="container">
	  &copy; Name 2013
	</div>
      </div>
    </div>
  </body>
</html>
